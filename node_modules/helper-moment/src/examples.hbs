sampledate: <%=new Date("Sun Jun 30 2011 01:53:23 GMT+0300 (EEST)")%>
sampletextdate: 'Sun, 30 Jun 2012 11:19:15 +0300'
inputformats: ["ddd, DD MMM YYYY HH:mm:ss ZZ", "MMMM YYYY"]
